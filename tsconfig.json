{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "react", // 如果使用 React 17+ 的 JSX 运行时需要这个
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}